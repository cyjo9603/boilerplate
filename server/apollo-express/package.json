{
  "name": "apollo-express",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "types": "graphql-codegen",
    "prestart": "yarn types",
    "dev": "concurrently \"nodemon --exec ts-node -r tsconfig-paths/register ./src/index.ts\" \"yarn types --watch \"src/api/**/*.graphql\"\"",
    "start": "NODE_ENV=production PORT=80 pm2 start ts-node -- --type-check -r tsconfig-paths/register ./src/index.ts"
  },
  "license": "MIT",
  "dependencies": {
    "apollo-server-express": "^2.19.1",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "graphql": "^15.4.0",
    "graphql-tools": "^7.0.2",
    "helmet": "^4.2.0",
    "hpp": "^0.2.3",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.11.8",
    "morgan": "^1.10.0",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.1.3"
  },
  "devDependencies": {
    "@graphql-codegen/add": "^2.0.2",
    "@graphql-codegen/cli": "^1.20.0",
    "@graphql-codegen/typescript": "^1.19.0",
    "@graphql-codegen/typescript-resolvers": "^1.18.1",
    "@types/compression": "^1.7.0",
    "@types/cookie-parser": "^1.4.2",
    "@types/hpp": "^0.2.1",
    "@types/mongoose": "^5.10.3",
    "@types/morgan": "^1.9.2",
    "@types/passport-jwt": "^3.0.3",
    "@types/passport-local": "^1.0.33",
    "@typescript-eslint/eslint-plugin": "^4.11.0",
    "@typescript-eslint/parser": "^4.11.0",
    "concurrently": "^5.3.0",
    "eslint": "^7.16.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^7.1.0",
    "eslint-import-resolver-typescript": "^2.3.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.3.0",
    "nodemon": "^2.0.6",
    "prettier": "^2.2.1",
    "ts-node": "^9.1.1"
  }
